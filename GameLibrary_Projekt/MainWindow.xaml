<Window x:Class="GameLibrary_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibrary_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent" AllowsTransparency="True"   WindowStyle="None" WindowStartupLocation="CenterScreen"  ResizeMode="CanResizeWithGrip"> 
    <Border BorderThickness="0" CornerRadius="35" MouseDown="MoveApp" Background="DarkGray">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Height="50" Margin="50,0,0,0"  Orientation="Horizontal">
                <TextBox Text="Spiel suchen..." VerticalAlignment="Center" Margin="10" Width="120" Background="LightGray"/>
                <Image Source="/Pictograms/search.png" Height="20" Width="20"  Margin="10"/>
                <TextBlock Text="Filter1" VerticalAlignment="Center" Margin="100,0,0,0"/>
                <TextBlock Text="Filter2" VerticalAlignment="Center" Margin="20"/>

                <TextBlock Text="Filter3" VerticalAlignment="Center" Margin="20"/>
            
                


                <Button Content="Anwenden" Background="Transparent"  Height="30" HorizontalAlignment="Right" Margin="200,0" Click="OnCLick"/>


            </StackPanel>
            <StackPanel Name="Dock" DockPanel.Dock="Left"  Width="50" Margin="0,-50,0,0"  >
                <TextBlock Height="57" HorizontalAlignment="Center" VerticalAlignment="Center">
                   <LineBreak/> Your <LineBreak/> Logo
                </TextBlock>
                <Button DockPanel.Dock="Top" Height="178" Background="Transparent" >
                    <Image Source="/Pictograms/Person.png" />

                </Button>
                <Button DockPanel.Dock="Bottom" Background="Transparent" Height="178">
                    <Image Source="/Pictograms/add.png" />

                </Button>
                
            </StackPanel>
            <StackPanel>
                <TextBlock Name="Text" Background="LightBlue" Height=" 30"/>
            </StackPanel>
